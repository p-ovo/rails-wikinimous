<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 justify-centre">
      <h1><%= @article.title %>  <%= link_to fa_icon("pencil"), edit_article_path(@article) %>
      <%= link_to fa_icon("trash-o"), article_path(@article), method: :delete, data: {confirm: "Are you sure?"} %></h1>
      <hr>
      <p>
        <%= @article.content %>
      </p>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>
