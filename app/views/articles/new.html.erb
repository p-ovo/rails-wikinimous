<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 justify-centre">
      <h1>New article</h1>
      <%= simple_form_for(@article) do |f| %>
          <%= f.input :title %>
          <%= f.input :content %>
          <%= f.submit %>
        <% end %>
      <%= link_to "Back", articles_path(@article) %>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>
